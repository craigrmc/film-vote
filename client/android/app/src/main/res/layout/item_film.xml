<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/linear_layout_film_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_film_header_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="The Grand 16 - The Matrix"
            android:textAppearance="?attr/textAppearanceListItem" />

        <TextView
            android:id="@+id/item_film_detail_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12:00 PM, 3:00 PM, 5:00 PM, 7:30 PM, 10:00 PM"
            android:textAppearance="?attr/textAppearanceListItem" />

    </LinearLayout>

</android.support.v7.widget.CardView>
