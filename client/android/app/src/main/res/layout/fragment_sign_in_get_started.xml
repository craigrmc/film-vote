<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.SignInGetStartedFragment">

    <LinearLayout
        android:id="@+id/linear_layout_sign_in_get_started"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_view_sign_in_get_started_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Welcome to Film Vote"
            android:textAlignment="center"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Title" />

        <TextView
            android:id="@+id/text_view_sign_in_get_started_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="25dp"
            android:text="An open source app to let you and your friends vote on the new films to watch."
            android:textAlignment="center"
            android:textAppearance="@style/Base.TextAppearance.AppCompat" />

        <Button
            android:id="@+id/button_sign_in_get_started"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Get Started" />

    </LinearLayout>

</FrameLayout>
